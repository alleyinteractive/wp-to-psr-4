root = true

# Unix-style newlines with a newline ending every file.
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab

[*.{js,css,scss,yml,json,.babelrc}]
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 4
